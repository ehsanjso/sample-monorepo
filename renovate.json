{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":noUnscheduledUpdates",
    "npm:unpublishSafe",
    "helpers:disableTypesNodeMajor",
    "group:eslintMonorepo",
    "group:reactMonorepo",
    "group:storybookMonorepo",
    "group:emotionMonorepo",
    "group:jestMonorepo",
    "group:testing-libraryMonorepo",
    "group:typescript-eslintMonorepo"
  ],
  "separateMinorPatch": true,
  "commitMessagePrefix": "Maintenance(N/A):",
  "commitMessageAction": "Bump",
  "commitMessageExtra": "from {{currentValue}} to {{newValue}} - {{updateType}} - {{currentValue}} - {{currentVersion}}",
  "commitMessageTopic": "{{depName}}",
  "rebaseWhen": "conflicted",
  "ignoreDeps": [],
  "labels": ["dependencies"],
  "postUpdateOptions": ["pnpmDedupe"],
  "prConcurrentLimit": 4,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "timezone": "America/Toronto",
  "schedule": ["after 9am and before 5pm every weekday"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6:00am on the first day of the month"]
  },
  "minor": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    { "matchDepTypes": ["peerDependencies"], "rangeStrategy": "widen" },
    { "groupName": "GitHub Actions", "matchManagers": ["github-actions"] },
    { "matchDepTypes": ["action"], "pinDigests": true },
    { "groupName": "Node", "matchPackageNames": ["node"], "enabled": false },
    {
      "packagePatterns": ["^@mui/", "^material-ui"],
      "dependencyDashboardApproval": true
    },
    { "matchUpdateTypes": ["major"], "addLabels": ["update:major"] },
    { "matchUpdateTypes": ["minor"], "addLabels": ["update:minor"] },
    { "matchUpdateTypes": ["patch"], "addLabels": ["update:patch"] }
  ]
}
